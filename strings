#include<ctype.h>
int main()
{
    char ch;
    printf("enter the letter");
    scanf("%c",&ch);
    if(islower(ch))
    {
        printf("letter is lowercase");
    }
    else
    printf("letter is upper case");
}
OUTPUT:enter the letterVAMSI
